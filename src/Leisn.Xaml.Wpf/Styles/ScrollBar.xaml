    <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="local:BorderAttach.CornerRadius" Value="{DynamicResource SmallCornerRadius}"/>
