<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Leisn.Xaml.Wpf.Controls"
                    xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF">
  <Style x:Key="NodeEditorBaseStyle" TargetType="local:NodeEditor">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:NodeEditor">
          <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <skia:SKElement x:Name="PART_Canvas" Margin="{TemplateBinding Padding}"/>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style TargetType="local:NodeEditor" BasedOn="{StaticResource NodeEditorBaseStyle}"/>

</ResourceDictionary>