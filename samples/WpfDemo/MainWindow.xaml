<Window x:Class="WpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ln="https://leisn.com/xaml/wpf"
        xmlns:local="clr-namespace:WpfDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <ln:StackPanel Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">
      <ComboBox x:Name="langsBox"/>
      <ln:RangeBox x:Name="rangbox" Minimum="-1" Title="RangeBox" Height="30" Width="200"/>
      <Button Content="{ln:Lang Ask}" Click="Button_Click" HorizontalAlignment="Center" Height="22"/>
      <Button Content="{ln:Lang ValueFormat,{Binding ElementName=rangbox,Path=Value}}"  HorizontalAlignment="Center" Height="22"/>
    </ln:StackPanel>
    <ln:PropertyGrid Grid.Column="1" x:Name="perpertyGrid"/>
  </Grid>
</Window>
